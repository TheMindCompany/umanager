// Begin Jade template.
extends layout
- subjects = typeof(subjects) != 'undefined' ? subjects : { }

//-CSS is inserted in the HEAD tag.
block css
  
//-JavaScript will be inserted at the end of the BODY tag.
block js
  script(src='/js/add-course.js')

block nav
    li
      a(data-toggle='collapse',data-parent="#accordion",data-target='#course', href='#course') Add Course
    li
      a(data-toggle='collapse',data-parent="#accordion",data-target='#collapse2', href='#collapse2') Add Subject

  
//-HTML content to display.
block content
  section#main.container
    .row
      //-Columns in a row must equal 12. 
      .col-xs-12.col-sm-12.col-md-12.col-lg-12
        h1 #{title}
        h3 Admin Only
        p note: Select one to add course or subject
        br
        #accordion.panel-group
          .panel.panel-default
            .panel-heading
              h2.panel-title
                a(data-toggle="collapse", data-parent="#accordion", href="#course")
                  | Add Course 
            #course.panel-collapse.collapse
              .panel-body
                form(role='form', method='POST', action='/catalog', id='register-form') 
                  h3 Course information
                  .input-group
                    .input-group-addon Course Name
                    inout.form-control(name='name', placeholder='', type='input', required)
                  br
                  .input-group
                    .input-group-addon Section
                    input.form-control(name='section', placeholder='', type='number', required)
                  br
                  input-group
                    .input-group-btn
                      button#subjects-lbl.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown') 
                        | Subject 
                        span.caret
                      ul#subjects.dropdown-menu(role='menu', aria-labelledby='subjects-lbl')
                        for subject in subjects
                          li(role='presentation')
                            a(role='menuitem', tabindex='-1') #{subject.code}
                    input#subject.form-control(name='subject', placeholder='', type='input')
                  br
                  h3 Session Information 
                  .row
                    .col-xs-6.col-sm-6.col-md-6.col-lg-6
                      .input-group
                        .input-group-addon Days
                        input.form-control(name='daily', placeholder='', type='input', required)
                    .col-xs-6.col-sm-6.col-md-6.col-lg-6
                      .input-group
                        .input-group-addon Time
                        input.form-control(name='time', placeholder='', type='input', required)
                  br
                  .row
                    .col-xs-6.col-sm-6.col-md-6.col-lg-6
                      .input-group
                        .input-group-addon Location
                        input.form-control(name='location', placeholder='',type='input',required)
                    .col-xs-6.col-sm-6.col-md-6.col-lg-6
                      .input-group
                        .input-group-addon Open Seats
                        input.form-control(name='seats', placeholder='', type='number', required)
                  br 
                  h3 Professor
                    .input-group
                      .input-group-addon Instructor
                      input.form-control(name='instructor', placeholder='', type='input', required) 
                  br
                  .input-group
                    .input-group-addon Comments
                    input.form-control(name='comments', placeholder='', type='input', required)
                  br
                  button.btn.btn-lg.btn-primary.pull-right.disabled(type='submit') Add
       
          .panel.panel-default
            .panel-heading
              h4.panel-title
                a(data-toggle='collapse', data-parent='#accordion', href='#collapse2')
                  | Add subject
            #collapse2.panel-collapse.collapse
              .panel-body
                form(role='form', method='POST', action='/credentials/create/reset', id='reset-pass-form')
                  h3 CIS
                  .input-group
                    .input-group-addon Subject Name
                    input.form-control(name='subject.name', placeholder='', type='input', required)
                  br 
                  .input-group
                    .input-group-addon Code
                    input.form-control(name='code', placeholder='', type='number', required)
                  br
                  .input-group
                    .input-group-addon description
                    input.form-control(name='description', placeholder='', type='input', required)
                  br
                  button.btn.btn-lg.btn-primary.pull-right.disabled(type='submit') Add
                  br
                  h3 MIS
                  .input-group
                    .input-group-addon Subject Name
                    input.form-control(name='name', placeholder='', type='input', required)
                  br 
                  .input-group
                    .input-group-addon Code
                    input.form-control(name='code', placeholder='', type='number', required)
                  br
                  .input-group
                    .input-group-addon description
                    input.form-control(name='description', placeholder='', type='input', required)
                  br
                  button.btn.btn-lg.btn-primary.pull-right.disabled(type='submit') Add
// End Jade Template